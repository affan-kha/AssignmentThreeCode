<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activities.SignUpActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:padding="@dimen/largePadding"
        android:gravity="center_horizontal"
        >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="@dimen/xLargeTextSize"
            android:textStyle="bold"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="@dimen/smallTextSize"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/sixteenDpMargin"
            />
       <com.google.android.material.textfield.TextInputEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/text_input_box_design"
           android:layout_marginTop="@dimen/defaultDpMargin"
           android:inputType="text"
           android:hint="Full Name"
           android:id="@+id/sign_up_name"
           />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="@dimen/smallTextSize"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/sixteenDpMargin"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_box_design"
            android:layout_marginTop="@dimen/defaultDpMargin"
            android:inputType="text"
            android:hint="Username"
            android:id="@+id/sign_up_user_name"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="@dimen/smallTextSize"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/sixteenDpMargin"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_box_design"
            android:layout_marginTop="@dimen/defaultDpMargin"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:id="@+id/sign_up_email"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="@dimen/smallTextSize"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/sixteenDpMargin"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_box_design"
            android:layout_marginTop="@dimen/defaultDpMargin"
            android:inputType="textPassword"
            android:hint="Password"
            android:id="@+id/sign_up_password"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="@dimen/smallTextSize"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/sixteenDpMargin"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_box_design"
            android:layout_marginTop="@dimen/defaultDpMargin"
            android:inputType="text"
            android:hint="Confirm Password"
            android:id="@+id/sign_up_confirm_password"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twentySixDpMargin"
            android:background="@drawable/button_background_design"
            android:text="Sign Up"
            android:textSize="@dimen/largeTextSize"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/sixteenDpMargin"
        android:padding="@dimen/mediumPadding"
        android:gravity="center"
        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="@dimen/mediumTextSize"
            android:textStyle="bold"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/defaultDpMargin"
            android:text="Sign in"
            android:textSize="@dimen/mediumTextSize"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:id="@+id/sign_in_view"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>